{
  "name": "fashionstore",
  "type": "module",
  "version": "1.0.0",
  "description": "Premium Fashion E-commerce - Inspired by Zara, Mango, JD",
  "scripts": {
    "dev": "astro dev",
    "start": "node ./dist/server/entry.mjs",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "seed:products": "node scripts/seed-products.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test --config=playwright.config.ts",
    "e2e:local": "npm run build && npm run preview -- --port 5173 & npx wait-on http://127.0.0.1:5173 && npx playwright test -g \"(newsletter|checkout)\" --config=playwright.config.ts"
  },
  "dependencies": {
    "@astrojs/node": "^9.0.0",
    "@astrojs/react": "^4.2.0",
    "@astrojs/tailwind": "^6.0.0",
    "@nanostores/react": "^0.8.4",
    "@stripe/stripe-js": "^5.5.0",
    "@supabase/supabase-js": "^2.49.1",
    "@types/nodemailer": "^7.0.5",
    "astro": "^5.1.5",
    "cloudinary": "^2.9.0",
    "dotenv": "^17.2.3",
    "nanostores": "^0.11.3",
    "nodemailer": "^7.0.12",
    "pdfkit": "^0.17.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-is": "^18.3.1",
    "recharts": "^3.6.0",
    "stripe": "^17.5.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/pdfkit": "^0.17.4",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "jsdom": "^22.1.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vitest": "^1.5.5",
    "@playwright/test": "^1.45.0"
  },
  "vitest": {
    "exclude": ["**/tests/e2e/**", "**/e2e/**", "**/playwright/**"]
  }
}
