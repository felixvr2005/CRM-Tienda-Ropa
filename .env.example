# .env.example
# Copiar este archivo a .env.local y actualizar con tus valores

# Supabase Configuration
PUBLIC_SUPABASE_URL=https://your-project.supabase.co
PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (PRIVADO - nunca compartir)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Configuración de Stripe (para fases posteriores)
# PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_...
# STRIPE_SECRET_KEY=sk_live_...

# Configuración de Email (SendGrid, Mailgun, etc)
# SENDGRID_API_KEY=SG....

# Cloudinary - Gestión de imágenes
PUBLIC_CLOUDINARY_CLOUD_NAME=tu-cloud-name
PUBLIC_CLOUDINARY_API_KEY=728481631991241
CLOUDINARY_API_SECRET=tu-api-secret-aqui

# App / Emails / Admin
PUBLIC_APP_URL=http://localhost:3000
PUBLIC_URL=http://localhost:3000
PUBLIC_FREE_SHIPPING_THRESHOLD=100
ADMIN_EMAIL=admin@tu-dominio.com
SUPPORT_EMAIL=soporte@tu-dominio.com
GMAIL_USER=tu_correo@gmail.com
GMAIL_APP_PASSWORD=tu_contraseña_app_gmail_aqui

# Webhooks / Secrets
STRIPE_WEBHOOK_SECRET=whsec_...

# Ambiente
NODE_ENV=development
