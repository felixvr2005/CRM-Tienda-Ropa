<script is:client>
  function setupOrderModals() {
    console.log('üîß Setting up order modals...');

    const cancelModal = document.getElementById('cancelModal');
    const returnModal = document.getElementById('returnModal');
    const cancelOrderBtn = document.getElementById('cancelOrderBtn');
    const returnOrderBtn = document.getElementById('returnOrderBtn');

    if (!cancelModal || !returnModal) {
      console.error('‚ùå Modal elements not found');
      return;
    }

    console.log('‚úÖ Modal elements found');

    const getOrderNumber = () => {
      const header = document.querySelector('h1');
      if (header) {
        const text = header.textContent || '';
        return text.replace('PEDIDO #', '').trim();
      }
      return '';
    };

    // MODAL CANCELACI√ìN
    if (cancelOrderBtn) {
      cancelOrderBtn.addEventListener('click', () => {
        console.log('üîì Opening cancel modal');
        cancelModal.classList.remove('hidden');
      });
    }

    // MODAL DEVOLUCI√ìN
    if (returnOrderBtn) {
      returnOrderBtn.addEventListener('click', () => {
        console.log('üîì Opening return modal');
        returnModal.classList.remove('hidden');
      });
    }

    // Cerrar modales al click fuera
    cancelModal.addEventListener('click', (e) => {
      if (e.target === cancelModal) {
        console.log('üîí Closing cancel modal');
        cancelModal.classList.add('hidden');
      }
    });

    returnModal.addEventListener('click', (e) => {
      if (e.target === returnModal) {
        console.log('üîí Closing return modal');
        returnModal.classList.add('hidden');
        const form = returnModal.querySelector('#returnForm');
        const success = returnModal.querySelector('#returnSuccess');
        if (form) form.classList.remove('hidden');
        if (success) success.classList.add('hidden');
      }
    });

    // CONFIRM CANCEL BUTTON
    const confirmCancelBtn = document.getElementById('confirmCancelBtn');
    if (confirmCancelBtn) {
      confirmCancelBtn.addEventListener('click', async () => {
        const orderNumber = getOrderNumber();
        if (!orderNumber) {
          alert('No se pudo determinar el n√∫mero de pedido');
          return;
        }

        console.log('üîÑ Canceling order:', orderNumber);
        confirmCancelBtn.disabled = true;
        const spinner = cancelModal.querySelector('#cancelSpinner');
        if (spinner) spinner.classList.remove('hidden');

        try {
          const response = await fetch('/api/orders/cancel', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ orderNumber })
          });

          const data = await response.json();

          if (response.ok) {
            alert('‚úÖ Pedido cancelado correctamente. Se ha procesado el reembolso.');
            window.location.href = '/cuenta/pedidos';
          } else {
            console.error('‚ùå Cancel error:', data);
            alert(data.message || 'Error al cancelar el pedido');
            confirmCancelBtn.disabled = false;
            if (spinner) spinner.classList.add('hidden');
          }
        } catch (error) {
          console.error('‚ùå Cancel request error:', error);
          alert('Error al cancelar el pedido');
          confirmCancelBtn.disabled = false;
          if (spinner) spinner.classList.add('hidden');
        }
      });
    }

    // RETURN FORM SUBMIT
    const returnForm = returnModal.querySelector('#returnForm');
    if (returnForm) {
      returnForm.addEventListener('submit', async (e) => {
        e.preventDefault();

        const returnReason = returnForm.querySelector('#returnReason');
        const reason = returnReason ? returnReason.value : '';
        const orderNumber = getOrderNumber();
        const submitBtn = returnForm.querySelector('#submitReturnBtn');

        if (!reason) {
          alert('Por favor, cu√©ntanos el motivo de la devoluci√≥n');
          return;
        }

        if (!orderNumber) {
          alert('No se pudo determinar el n√∫mero de pedido');
          return;
        }

        console.log('üîÑ Requesting return for order:', orderNumber);
        if (submitBtn) {
          submitBtn.disabled = true;
          submitBtn.textContent = 'Procesando...';
        }

        try {
          const response = await fetch('/api/orders/request-return', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ orderNumber, reason })
          });

          const data = await response.json();

          if (response.ok) {
            console.log('‚úÖ Return request created:', data);
            const form = returnModal.querySelector('#returnForm');
            const success = returnModal.querySelector('#returnSuccess');
            if (form) form.classList.add('hidden');
            if (success) success.classList.remove('hidden');

            setTimeout(() => {
              window.location.href = '/cuenta/pedidos';
            }, 3000);
          } else {
            console.error('‚ùå Return error:', data);
            alert(data.message || 'Error al solicitar la devoluci√≥n');
            if (submitBtn) {
              submitBtn.disabled = false;
              submitBtn.textContent = 'Solicitar Devoluci√≥n';
            }
          }
        } catch (error) {
          console.error('‚ùå Return request error:', error);
          alert('Error al solicitar la devoluci√≥n');
          if (submitBtn) {
            submitBtn.disabled = false;
            submitBtn.textContent = 'Solicitar Devoluci√≥n';
          }
        }
      });
    }

    // Close buttons
    const cancelModalCloseBtn = document.getElementById('cancelModalCloseBtn');
    if (cancelModalCloseBtn) {
      cancelModalCloseBtn.addEventListener('click', () => {
        console.log('üîí Closing cancel modal via button');
        cancelModal.classList.add('hidden');
      });
    }

    const returnModalCloseBtn = document.getElementById('returnModalCloseBtn');
    if (returnModalCloseBtn) {
      returnModalCloseBtn.addEventListener('click', () => {
        console.log('üîí Closing return modal via button');
        returnModal.classList.add('hidden');
        const form = returnModal.querySelector('#returnForm');
        const success = returnModal.querySelector('#returnSuccess');
        if (form) form.classList.remove('hidden');
        if (success) success.classList.add('hidden');
      });
    }

    const returnSuccessCloseBtn = document.getElementById('returnSuccessCloseBtn');
    if (returnSuccessCloseBtn) {
      returnSuccessCloseBtn.addEventListener('click', () => {
        console.log('üîí Closing return modal via success button');
        window.location.href = '/cuenta/pedidos';
      });
    }

    console.log('‚úÖ Order modals setup complete');
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', setupOrderModals);
  } else {
    setupOrderModals();
  }

  document.addEventListener('astro:page-load', setupOrderModals);
</script>

