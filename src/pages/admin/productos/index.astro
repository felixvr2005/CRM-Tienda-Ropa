---
/**
 * Admin Products List - SSR
 */
import AdminLayout from '@layouts/AdminLayout.astro';
import { supabase } from '@lib/supabase';
import { formatPrice } from '@lib/utils';

export const prerender = false;

const { data: products } = await supabase
  .from('products')
  .select(`
    *,
    category:categories(name)
  `)
  .order('created_at', { ascending: false });
---

<AdminLayout title="Productos">
  <div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-display">Productos</h1>
        <p class="text-primary-500">{products?.length || 0} productos</p>
      </div>
      <a 
        href="/admin/productos/nuevo"
        class="flex items-center gap-2 bg-primary-900 text-white px-4 py-2 text-sm hover:bg-primary-800 transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Nuevo producto
      </a>
    </div>
    
    <!-- Search & Filters -->
    <div class="bg-white border border-primary-200 p-4 flex flex-wrap gap-4">
      <input 
        type="text"
        placeholder="Buscar productos..."
        class="flex-1 min-w-[200px] border border-primary-300 px-4 py-2 text-sm focus:outline-none focus:border-primary-900"
      />
      <select class="border border-primary-300 px-4 py-2 text-sm focus:outline-none focus:border-primary-900">
        <option>Todas las categorías</option>
      </select>
      <select class="border border-primary-300 px-4 py-2 text-sm focus:outline-none focus:border-primary-900">
        <option>Todos los estados</option>
        <option>Activos</option>
        <option>Destacados</option>
        <option>Oferta</option>
      </select>
    </div>
    
    <!-- Products Table -->
    <div class="bg-white border border-primary-200 overflow-hidden">
      <table class="w-full">
        <thead class="bg-primary-50">
          <tr>
            <th class="text-left text-xs uppercase tracking-wider text-primary-500 px-4 py-3">Producto</th>
            <th class="text-left text-xs uppercase tracking-wider text-primary-500 px-4 py-3">Categoría</th>
            <th class="text-left text-xs uppercase tracking-wider text-primary-500 px-4 py-3">Precio</th>
            <th class="text-left text-xs uppercase tracking-wider text-primary-500 px-4 py-3">Estado</th>
            <th class="text-left text-xs uppercase tracking-wider text-primary-500 px-4 py-3">Acciones</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-primary-100">
          {products && products.length > 0 ? (
            products.map((product) => (
              <tr class="hover:bg-primary-50 transition-colors">
                <td class="px-4 py-3">
                  <div class="flex items-center gap-3">
                    <div class="w-12 h-12 bg-primary-100 flex-shrink-0 overflow-hidden">
                      {product.images && product.images.length > 0 ? (
                        <img 
                          src={product.images[0]} 
                          alt={product.name}
                          class="w-full h-full object-cover"
                        />
                      ) : (
                        <div class="w-full h-full bg-primary-200"></div>
                      )}
                    </div>
                    <div>
                      <p class="font-medium">{product.name}</p>
                      <p class="text-xs text-primary-500">SKU: {product.sku || 'N/A'}</p>
                    </div>
                  </div>
                </td>
                <td class="px-4 py-3 text-sm text-primary-600">
                  {product.category?.name || '-'}
                </td>
                <td class="px-4 py-3">
                  <div>
                    {product.discount_percentage > 0 ? (
                      <>
                        <span class="text-red-600 font-medium">
                          {formatPrice(product.price * (1 - product.discount_percentage / 100))}
                        </span>
                        <span class="text-xs text-primary-400 line-through ml-2">
                          {formatPrice(product.price)}
                        </span>
                      </>
                    ) : (
                      <span class="font-medium">{formatPrice(product.price)}</span>
                    )}
                  </div>
                </td>
                <td class="px-4 py-3">
                  <div class="flex gap-2">
                    {product.is_featured && (
                      <span class="text-xs bg-yellow-100 text-yellow-700 px-2 py-0.5 rounded">Destacado</span>
                    )}
                    {product.is_new && (
                      <span class="text-xs bg-blue-100 text-blue-700 px-2 py-0.5 rounded">Nuevo</span>
                    )}
                    {product.discount_percentage > 0 && (
                      <span class="text-xs bg-red-100 text-red-700 px-2 py-0.5 rounded">-{product.discount_percentage}%</span>
                    )}
                    {!product.is_active && (
                      <span class="text-xs bg-primary-100 text-primary-700 px-2 py-0.5 rounded">Inactivo</span>
                    )}
                  </div>
                </td>
                <td class="px-4 py-3">
                  <div class="flex items-center gap-2">
                    <a 
                      href={`/admin/productos/${product.id}`}
                      class="text-sm text-primary-600 hover:text-primary-900"
                    >
                      Editar
                    </a>
                    <button 
                      class="text-sm text-red-600 hover:text-red-800"
                      data-product-id={product.id}
                      onclick="deleteProduct(this)"
                    >
                      Eliminar
                    </button>
                  </div>
                </td>
              </tr>
            ))
          ) : (
            <tr>
              <td colspan="5" class="px-4 py-8 text-center text-primary-500">
                No hay productos. <a href="/admin/productos/nuevo" class="underline hover:text-primary-900">Crear el primero</a>
              </td>
            </tr>
          )}
        </tbody>
      </table>
    </div>
  </div>
  
  <script is:inline>
    async function deleteProduct(button) {
      if (!confirm('¿Estás seguro de eliminar este producto?')) return;
      
      const productId = button.dataset.productId;
      
      try {
        const response = await fetch(`/api/admin/products/${productId}`, {
          method: 'DELETE',
        });
        
        if (response.ok) {
          window.location.reload();
        } else {
          alert('Error al eliminar el producto');
        }
      } catch (error) {
        alert('Error al eliminar el producto');
      }
    }
  </script>
</AdminLayout>
