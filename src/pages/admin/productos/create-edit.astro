---
/**
 * Admin Create/Edit Product - MEJORADO
 * Con soporte para tipos de producto y variantes con m√∫ltiples im√°genes
 */
import AdminLayout from '@layouts/AdminLayout.astro';
import { supabase, supabaseAdmin } from '@lib/supabase';
import { VariantImagesUploader } from '@components/islands/VariantImagesUploader.tsx';

export const prerender = false;

// Verificar autenticaci√≥n
const accessToken = Astro.cookies.get('sb-access-token')?.value;
if (!accessToken) {
  return Astro.redirect('/admin/login?redirect=/admin/productos/nuevo');
}

// Obtener categor√≠as y tipos de producto
const [
  { data: categories },
  { data: productTypes }
] = await Promise.all([
  supabase
    .from('categories')
    .select('id, name')
    .order('name'),
  supabase
    .from('product_types')
    .select('id, name, size_type, available_sizes')
    .order('name')
]);

const productId = Astro.params.id;
let product = null;
let variants = [];

// Si es edici√≥n, cargar producto
if (productId) {
  const { data: productData } = await supabaseAdmin
    .from('products')
    .select('*')
    .eq('id', productId)
    .single();

  if (productData) {
    product = productData;
    
    // Cargar variantes
    const { data: variantsData } = await supabaseAdmin
      .from('product_variants')
      .select('*')
      .eq('product_id', productId);
    
    variants = variantsData || [];
  }
}

const isEditing = !!product;
const pageTitle = isEditing ? `Editar: ${product?.name}` : 'Nuevo Producto';
---

<AdminLayout title={pageTitle}>
  <div class="max-w-6xl mx-auto px-4 py-8">
    <!-- Header -->
    <div class="flex items-center gap-4 mb-8">
      <a href="/admin/productos" class="text-primary-500 hover:text-primary-900">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </a>
      <h1 class="text-3xl font-bold text-primary-900">{pageTitle}</h1>
    </div>

    <form id="productForm" class="space-y-6">
      <!-- Informaci√≥n B√°sica -->
      <div class="bg-white border border-primary-200 rounded-lg p-6">
        <h2 class="font-bold text-lg text-primary-900 mb-4">Informaci√≥n B√°sica</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="name" class="block text-sm font-medium text-primary-700 mb-2">
              Nombre del Producto *
            </label>
            <input 
              type="text" 
              id="name"
              name="name" 
              value={product?.name || ''}
              required
              class="w-full px-4 py-2 border border-primary-300 rounded-lg focus:border-primary-900 focus:outline-none"
              placeholder="ej: Camiseta b√°sica"
            />
          </div>

          <div>
            <label for="product_type_id" class="block text-sm font-medium text-primary-700 mb-2">
              Tipo de Producto * (define las tallas)
            </label>
            <select 
              id="product_type_id"
              name="product_type_id"
              required
              class="w-full px-4 py-2 border border-primary-300 rounded-lg focus:border-primary-900 focus:outline-none"
            >
              <option value="">Selecciona un tipo...</option>
              {productTypes?.map((type) => (
                <option 
                  value={type.id}
                  selected={product?.product_type_id === type.id}
                >
                  {type.name} ({type.size_type === 'standard' ? 'S,M,L...' : type.size_type === 'shoe' ? '35-46' : '√önico'})
                </option>
              ))}
            </select>
            <p class="text-xs text-primary-600 mt-1">
              ‚ö†Ô∏è Cambiar esto regenerar√° las variantes disponibles
            </p>
          </div>
        </div>

        <div class="mt-4">
          <label for="category_id" class="block text-sm font-medium text-primary-700 mb-2">
            Categor√≠a
          </label>
          <select 
            id="category_id"
            name="category_id"
            class="w-full px-4 py-2 border border-primary-300 rounded-lg focus:border-primary-900 focus:outline-none"
          >
            <option value="">Sin categor√≠a</option>
            {categories?.map((cat) => (
              <option 
                value={cat.id}
                selected={product?.category_id === cat.id}
              >
                {cat.name}
              </option>
            ))}
          </select>
        </div>

        <div class="mt-4">
          <label for="description" class="block text-sm font-medium text-primary-700 mb-2">
            Descripci√≥n
          </label>
          <textarea 
            id="description"
            name="description"
            rows="4"
            class="w-full px-4 py-2 border border-primary-300 rounded-lg focus:border-primary-900 focus:outline-none"
            placeholder="Describe el producto..."
          >{product?.description}</textarea>
        </div>
      </div>

      <!-- Precio -->
      <div class="bg-white border border-primary-200 rounded-lg p-6">
        <h2 class="font-bold text-lg text-primary-900 mb-4">Precio</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <label for="price" class="block text-sm font-medium text-primary-700 mb-2">
              Precio Base ‚Ç¨ *
            </label>
            <input 
              type="number" 
              id="price"
              name="price" 
              value={product?.price || ''}
              required
              step="0.01"
              min="0"
              class="w-full px-4 py-2 border border-primary-300 rounded-lg focus:border-primary-900 focus:outline-none"
            />
          </div>

          <div>
            <label for="compare_at_price" class="block text-sm font-medium text-primary-700 mb-2">
              Precio Original (Tachado)
            </label>
            <input 
              type="number" 
              id="compare_at_price"
              name="compare_at_price" 
              value={product?.compare_at_price || ''}
              step="0.01"
              min="0"
              class="w-full px-4 py-2 border border-primary-300 rounded-lg focus:border-primary-900 focus:outline-none"
            />
          </div>

          <div>
            <label for="discount_percentage" class="block text-sm font-medium text-primary-700 mb-2">
              Descuento (%)
            </label>
            <input 
              type="number" 
              id="discount_percentage"
              name="discount_percentage" 
              value={product?.discount_percentage || 0}
              min="0"
              max="100"
              class="w-full px-4 py-2 border border-primary-300 rounded-lg focus:border-primary-900 focus:outline-none"
            />
          </div>
        </div>
      </div>

      <!-- Detalles Adicionales -->
      <div class="bg-white border border-primary-200 rounded-lg p-6">
        <h2 class="font-bold text-lg text-primary-900 mb-4">Detalles del Producto</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="brand" class="block text-sm font-medium text-primary-700 mb-2">
              Marca
            </label>
            <input 
              type="text" 
              id="brand"
              name="brand" 
              value={product?.brand || ''}
              class="w-full px-4 py-2 border border-primary-300 rounded-lg focus:border-primary-900 focus:outline-none"
              placeholder="ej: Nike, Adidas"
            />
          </div>

          <div>
            <label for="material" class="block text-sm font-medium text-primary-700 mb-2">
              Material
            </label>
            <input 
              type="text" 
              id="material"
              name="material" 
              value={product?.material || ''}
              class="w-full px-4 py-2 border border-primary-300 rounded-lg focus:border-primary-900 focus:outline-none"
              placeholder="ej: 100% algod√≥n"
            />
          </div>
        </div>

        <div class="mt-4">
          <label for="care_instructions" class="block text-sm font-medium text-primary-700 mb-2">
            Instrucciones de Cuidado
          </label>
          <textarea 
            id="care_instructions"
            name="care_instructions"
            rows="3"
            class="w-full px-4 py-2 border border-primary-300 rounded-lg focus:border-primary-900 focus:outline-none"
            placeholder="Lavar a m√°quina a 30¬∞..."
          >{product?.care_instructions}</textarea>
        </div>

        <div class="grid grid-cols-2 gap-4 mt-4">
          <label class="flex items-center gap-2 cursor-pointer">
            <input 
              type="checkbox" 
              name="is_featured"
              checked={product?.is_featured || false}
              class="w-4 h-4"
            />
            <span class="text-sm text-primary-700">Destacado</span>
          </label>

          <label class="flex items-center gap-2 cursor-pointer">
            <input 
              type="checkbox" 
              name="is_new"
              checked={product?.is_new || false}
              class="w-4 h-4"
            />
            <span class="text-sm text-primary-700">Nuevo</span>
          </label>

          <label class="flex items-center gap-2 cursor-pointer">
            <input 
              type="checkbox" 
              name="is_flash_offer"
              checked={product?.is_flash_offer || false}
              class="w-4 h-4"
            />
            <span class="text-sm text-primary-700">Oferta Flash</span>
          </label>

          <label class="flex items-center gap-2 cursor-pointer">
            <input 
              type="checkbox" 
              name="is_active"
              checked={product?.is_active !== false}
              class="w-4 h-4"
            />
            <span class="text-sm text-primary-700">Activo</span>
          </label>
        </div>
      </div>

      <!-- Variantes (creaci√≥n y edici√≥n) -->
      <div class="bg-white border border-primary-200 rounded-lg p-6">
        <h2 class="font-bold text-lg text-primary-900 mb-4">Variantes (Color + Talla)</h2>

        <div id="variantsContainer" class="space-y-4">
          {isEditing ? (
            // Mostrar variantes existentes en edici√≥n
            variants.map((variant) => (
              <div class="border border-primary-200 rounded-lg p-4">
                <div class="flex justify-between items-start mb-3">
                  <h3 class="font-medium text-primary-900">
                    {variant.color} / {variant.size}
                  </h3>
                  <span class={`text-sm px-2 py-1 rounded ${
                    variant.stock > 0 
                      ? 'bg-green-100 text-green-800' 
                      : 'bg-red-100 text-red-800'
                  }`}>
                    Stock: {variant.stock}
                  </span>
                </div>

                <div class="grid grid-cols-2 md:grid-cols-4 gap-3 mb-3">
                  <div>
                    <label class="text-xs text-primary-600 block mb-1">Stock</label>
                    <input 
                      type="number" 
                      data-variant-id={variant.id}
                      data-field="stock"
                      value={variant.stock}
                      class="w-full px-2 py-1 border border-primary-300 rounded text-sm"
                    />
                  </div>
                  <div>
                    <label class="text-xs text-primary-600 block mb-1">SKU</label>
                    <input 
                      type="text" 
                      data-variant-id={variant.id}
                      data-field="sku"
                      value={variant.sku || ''}
                      class="w-full px-2 py-1 border border-primary-300 rounded text-sm"
                    />
                  </div>
                </div>

                <!-- Aqu√≠ ir√≠a el componente VariantImagesUploader -->
                <p class="text-sm text-primary-600 p-3 bg-primary-50 rounded">
                  üñºÔ∏è Secci√≥n de im√°genes por variante (se carga en el navegador)
                </p>

                {isEditing && (
                  // Montar el uploader real cuando la variante exista (edici√≥n)
                  <div class="mt-4">
                    <VariantImagesUploader variantId={variant.id} variantInfo={`${variant.color} / ${variant.size}`} productId={product?.id} />
                  </div>
                )}
              </div>
            ))
          ) : (
            // UI para crear variantes en la pantalla de creaci√≥n
            <div id="newVariantsList" class="space-y-3">
              <p class="text-sm text-primary-500">A√±ade variantes antes de guardar. Puedes a√±adir color, talla, precio y stock. Las im√°genes se podr√°n subir despu√©s de crear el producto.</p>
              <div id="newVariants"></div>
              <div class="mt-3">
                <button id="addVariantBtn" type="button" class="px-4 py-2 bg-primary-900 text-white rounded">A√±adir Variante</button>
              </div>
            </div>
          )}
        </div>

        {isEditing && variants.length === 0 && (
          <p class="text-center text-primary-500 py-8">
            Guarda el producto primero para crear variantes
          </p>
        )}

        {!isEditing && (
          <p class="text-center text-primary-500 py-4">Las im√°genes se pueden a√±adir tras crear el producto.</p>
        )}
      </div>

      <!-- Acciones -->
      <div class="flex gap-4">
        <button
          type="submit"
          class="px-8 py-3 bg-primary-900 text-white rounded-lg font-medium hover:bg-primary-800 transition-colors"
        >
          {isEditing ? 'Guardar Cambios' : 'Crear Producto'}
        </button>

        <a
          href="/admin/productos"
          class="px-8 py-3 border border-primary-300 text-primary-700 rounded-lg font-medium hover:bg-primary-50 transition-colors"
        >
          Cancelar
        </a>
      </div>
    </form>
  </div>

  <script>
    const form = document.getElementById('productForm');
    let newVariants = [];

    function renderNewVariants() {
      const container = document.getElementById('newVariants');
      if (!container) return;
      container.innerHTML = '';

      newVariants.forEach((v, idx) => {
        const div = document.createElement('div');
        div.className = 'border border-primary-200 rounded-lg p-3';
        div.innerHTML = `
          <div class="grid grid-cols-2 md:grid-cols-4 gap-3 mb-3">
            <div><label class="text-xs text-primary-600 block mb-1">Color</label><input type="text" data-idx="${idx}" data-field="color" value="${v.color || ''}" class="w-full px-2 py-1 border rounded text-sm"/></div>
            <div><label class="text-xs text-primary-600 block mb-1">Talla</label><input type="text" data-idx="${idx}" data-field="size" value="${v.size || ''}" class="w-full px-2 py-1 border rounded text-sm"/></div>
            <div><label class="text-xs text-primary-600 block mb-1">Precio</label><input type="number" step="0.01" data-idx="${idx}" data-field="price" value="${v.price || ''}" class="w-full px-2 py-1 border rounded text-sm"/></div>
            <div><label class="text-xs text-primary-600 block mb-1">Stock</label><input type="number" data-idx="${idx}" data-field="stock" value="${v.stock || 0}" class="w-full px-2 py-1 border rounded text-sm"/></div>
          </div>
          <div class="flex gap-2"><button type="button" data-idx="${idx}" class="removeVariantBtn px-3 py-1 bg-red-100 text-red-700 rounded">Eliminar</button></div>
        `;
        container.appendChild(div);
      });

      // attach input listeners
      container.querySelectorAll('input').forEach((input) => {
        input.addEventListener('input', (e) => {
          const el = e.target;
          const idx = parseInt(el.dataset.idx);
          const field = el.dataset.field;
          newVariants[idx][field] = (field === 'price' || field === 'stock') ? (parseFloat(el.value) || 0) : el.value;
        });
      });

      // attach remove listeners
      container.querySelectorAll('.removeVariantBtn').forEach((btn) => {
        btn.addEventListener('click', (e) => {
          const idx = parseInt(btn.dataset.idx);
          newVariants.splice(idx, 1);
          renderNewVariants();
        });
      });
    }

    document.getElementById('addVariantBtn')?.addEventListener('click', () => {
      newVariants.push({ color: '', size: '', price: null, stock: 0, sku: null });
      renderNewVariants();
    });

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const productData = {
        name: formData.get('name'),
        description: formData.get('description'),
        category_id: formData.get('category_id') || null,
        product_type_id: formData.get('product_type_id'),
        price: parseFloat(formData.get('price')),
        compare_at_price: formData.get('compare_at_price') ? parseFloat(formData.get('compare_at_price')) : null,
        discount_percentage: parseInt(formData.get('discount_percentage')) || 0,
        brand: formData.get('brand'),
        material: formData.get('material'),
        care_instructions: formData.get('care_instructions'),
        is_featured: formData.get('is_featured') === 'on',
        is_new: formData.get('is_new') === 'on',
        is_flash_offer: formData.get('is_flash_offer') === 'on',
        is_active: formData.get('is_active') === 'on',
        variants: newVariants.length ? newVariants : undefined
      };


      try {
        const response = await fetch('/api/admin/products/save', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(productData)
        });

        const result = await response.json();
        if (result.success) {
          window.location.href = `/admin/productos/${result.productId}`;
        } else {
          alert('Error: ' + result.error);
        }
      } catch (error) {
        alert('Error al guardar: ' + error);
      }
    });
  </script>
</AdminLayout>
