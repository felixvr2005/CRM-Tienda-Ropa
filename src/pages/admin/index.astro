---
/**
 * Admin Dashboard - SSR
 */
import AdminLayout from '@layouts/AdminLayout.astro';
import { supabase, supabaseAdmin } from '@lib/supabase';
import SalesAnalyticsDashboard from '@/components/islands/SalesAnalyticsDashboard';

export const prerender = false;

// Verificar autenticación y que sea admin
const accessToken = Astro.cookies.get('sb-access-token')?.value;
if (!accessToken) {
  return Astro.redirect('/admin/login');
}

const { data: { user }, error: authError } = await supabase.auth.getUser(accessToken);
if (authError || !user) {
  return Astro.redirect('/admin/login');
}

// Verificar que sea admin activo
const { data: adminUser } = await supabaseAdmin
  .from('admin_users')
  .select('id, is_active')
  .eq('auth_user_id', user.id)
  .eq('is_active', true)
  .single();

if (!adminUser) {
  console.warn(`[Security] Usuario ${user.email} intentó acceder a admin sin permisos`);
  Astro.cookies.delete('sb-access-token', { path: '/' });
  Astro.cookies.delete('sb-refresh-token', { path: '/' });
  return Astro.redirect('/cuenta/login?error=unauthorized');
}

// Stats
const { count: productsCount } = await supabaseAdmin.from('products').select('*', { count: 'exact', head: true });
const { count: ordersCount } = await supabaseAdmin.from('orders').select('*', { count: 'exact', head: true });
const { count: categoriesCount } = await supabaseAdmin.from('categories').select('*', { count: 'exact', head: true });

// Ventas totales del mes
const startOfMonth = new Date();
startOfMonth.setDate(1);
startOfMonth.setHours(0,0,0,0);
const { data: monthSalesResult } = await supabaseAdmin
  .from('orders')
  .select('total_amount', { count: 'exact' })
  .gte('created_at', startOfMonth.toISOString())
  .eq('payment_status', 'paid');
// Sum manually because select(..., { count }) doesn't return sum
const { data: monthSalesRows } = await supabaseAdmin
  .from('orders')
  .select('total_amount')
  .gte('created_at', startOfMonth.toISOString())
  .eq('payment_status', 'paid');
const ventasMes = (monthSalesRows || []).reduce((s:any, r:any) => s + (r.total_amount || 0), 0);

// Pedidos pendientes
const { count: pendingOrdersCount } = await supabaseAdmin
  .from('orders')
  .select('*', { count: 'exact', head: true })
  .eq('status', 'pending');

// Producto más vendido (por cantidad total) - últimos 30 días
const days30 = new Date();
days30.setDate(days30.getDate() - 30);
days30.setHours(0,0,0,0);
const { data: itemsLast30 } = await supabaseAdmin
  .from('order_items')
  .select('product_id, quantity')
  .gte('created_at', days30.toISOString());

let productoMasVendido: any = null;
if (itemsLast30 && itemsLast30.length > 0) {
  // Contar por product_id cuando esté disponible
  const countsById: Record<string, number> = {};
  const countsByName: Record<string, number> = {};
  for (const it of itemsLast30) {
    if (it.product_id) {
      countsById[it.product_id] = (countsById[it.product_id] || 0) + (it.quantity || 0);
    } else if (it.product_name) {
      countsByName[it.product_name] = (countsByName[it.product_name] || 0) + (it.quantity || 0);
    }
  }

  // Preferir product_id
  const topById = Object.entries(countsById).sort((a,b) => b[1]-a[1])[0];
  if (topById) {
    const topProductId = topById[0];
    const units = topById[1];
    const { data: prod } = await supabaseAdmin.from('products').select('id, name').eq('id', topProductId).single();
    productoMasVendido = prod ? { name: prod.name, units } : { name: '—', units };
  } else {
    // Fallback por nombre
    const topByName = Object.entries(countsByName).sort((a,b) => b[1]-a[1])[0];
    if (topByName) {
      productoMasVendido = { name: topByName[0], units: topByName[1] };
    }
  }
}

// Recent orders
const { data: recentOrders } = await supabaseAdmin
  .from('orders')
  .select('*')
  .order('created_at', { ascending: false })
  .limit(5);

// Low stock products
const { data: lowStockProducts } = await supabaseAdmin
  .from('product_variants')
  .select(`
    *,
    product:products(id, name, slug)
  `)
  .lt('stock', 5)
  .order('stock', { ascending: true })
  .limit(5);
---

<AdminLayout title="Dashboard">
  <div class="space-y-8">
    <!-- Header -->
    <div>
      <h1 class="text-2xl font-display">Dashboard</h1>
      <p class="text-primary-500">Resumen de tu tienda</p>
    </div>
    
    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <div class="bg-white p-6 border border-primary-200">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-primary-500 uppercase tracking-wider">Productos</p>
            <p class="text-3xl font-display mt-1">{productsCount || 0}</p>
          </div>
          <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
          </div>
        </div>
        <a href="/admin/productos" class="text-sm text-primary-500 hover:text-primary-900 mt-4 inline-block">
          Ver todos →
        </a>
      </div>
      
      <div class="bg-white p-6 border border-primary-200">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-primary-500 uppercase tracking-wider">Pedidos</p>
            <p class="text-3xl font-display mt-1">{ordersCount || 0}</p>
          </div>
          <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
          </div>
        </div>
        <a href="/admin/pedidos" class="text-sm text-primary-500 hover:text-primary-900 mt-4 inline-block">
          Ver todos →
        </a>
      </div>
      
      <div class="bg-white p-6 border border-primary-200">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-primary-500 uppercase tracking-wider">Categorías</p>
            <p class="text-3xl font-display mt-1">{categoriesCount || 0}</p>
          </div>
          <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A2 2 0 013 12V7a4 4 0 014-4z" />
            </svg>
          </div>
        </div>
        <a href="/admin/categorias" class="text-sm text-primary-500 hover:text-primary-900 mt-4 inline-block">
          Ver todas →
        </a>
      </div>
      
      <div class="bg-white p-6 border border-primary-200">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-primary-500 uppercase tracking-wider">Ventas Totales del Mes (€)</p>
            <p class="text-3xl font-display mt-1">€{ventasMes.toFixed(2)}</p>
          </div>
          <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Additional KPI Row -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="bg-white p-6 border border-primary-200">
        <p class="text-sm text-primary-500 uppercase tracking-wider">Pedidos Pendientes</p>
        <p class="text-3xl font-display mt-1">{pendingOrdersCount || 0}</p>
        <p class="text-xs text-primary-500 mt-2">Órdenes con estado pendiente</p>
      </div>

      <div class="bg-white p-6 border border-primary-200">
        <p class="text-sm text-primary-500 uppercase tracking-wider">Producto Más Vendido</p>
        <p class="text-3xl font-display mt-1">{productoMasVendido ? productoMasVendido.name : '—'}</p>
        <p class="text-xs text-primary-500 mt-2">{productoMasVendido ? `${productoMasVendido.units} uds` : 'Últimos 30 días por unidades'}</p>
      </div>
    </div>
    </div>
    
    <!-- Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Recent Orders -->
      <div class="bg-white border border-primary-200">
        <div class="p-4 border-b border-primary-200 flex items-center justify-between">
          <h2 class="font-medium">Últimos pedidos</h2>
          <a href="/admin/pedidos" class="text-sm text-primary-500 hover:text-primary-900">Ver todos</a>
        </div>
        <div class="divide-y divide-primary-100">
          {recentOrders && recentOrders.length > 0 ? (
            recentOrders.map((order) => (
              <div class="p-4 flex items-center justify-between">
                <div>
                  <p class="font-medium">{order.order_number}</p>
                  <p class="text-sm text-primary-500">{order.customer_email}</p>
                </div>
                <div class="text-right">
                  <p class="font-medium">{order.total_amount}€</p>
                  <span class={`text-xs px-2 py-1 rounded ${
                    order.status === 'completed' ? 'bg-green-100 text-green-700' :
                    order.status === 'pending' ? 'bg-yellow-100 text-yellow-700' :
                    'bg-primary-100 text-primary-700'
                  }`}>
                    {order.status}
                  </span>
                </div>
              </div>
            ))
          ) : (
            <div class="p-8 text-center text-primary-500">
              No hay pedidos todavía
            </div>
          )}
        </div>
      </div>
      
      <!-- Low Stock -->
      <div class="bg-white border border-primary-200">
        <div class="p-4 border-b border-primary-200 flex items-center justify-between">
          <h2 class="font-medium">Stock bajo</h2>
          <a href="/admin/productos" class="text-sm text-primary-500 hover:text-primary-900">Ver productos</a>
        </div>
        <div class="divide-y divide-primary-100">
          {lowStockProducts && lowStockProducts.length > 0 ? (
            lowStockProducts.map((variant) => (
              <div class="p-4 flex items-center justify-between">
                <div>
                  <p class="font-medium">{variant.product?.name}</p>
                  <p class="text-sm text-primary-500">
                    Talla: {variant.size} | Color: {variant.color}
                  </p>
                </div>
                <span class={`text-sm font-medium ${variant.stock === 0 ? 'text-red-600' : 'text-yellow-600'}`}>
                  {variant.stock} uds
                </span>
              </div>
            ))
          ) : (
            <div class="p-8 text-center text-primary-500">
              No hay productos con stock bajo
            </div>
          )}
        </div>
      </div>
    </div>
    
    <!-- Quick Actions -->
    <div class="bg-white border border-primary-200 p-6">
      <h2 class="font-medium mb-4">Acciones rápidas</h2>
      <div class="flex flex-wrap gap-4">
        <a 
          href="/admin/productos/nuevo" 
          class="flex items-center gap-2 bg-primary-900 text-white px-4 py-2 text-sm hover:bg-primary-800 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Nuevo producto
        </a>
        <a 
          href="/admin/categorias/nueva" 
          class="flex items-center gap-2 border border-primary-300 px-4 py-2 text-sm hover:bg-primary-50 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Nueva categoría
        </a>
        <a 
          href="/" 
          target="_blank"
          class="flex items-center gap-2 border border-primary-300 px-4 py-2 text-sm hover:bg-primary-50 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
          Ver tienda
        </a>
      </div>
    </div>

    <!-- Analytics Component -->
    <div class="bg-white border border-primary-200 p-6">
      <h2 class="font-medium mb-4">Analíticas de Ventas (Últimos 7 días)</h2>
      <SalesAnalyticsDashboard client:load />
    </div>
  </div>
</AdminLayout>
